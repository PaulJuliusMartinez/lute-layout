{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["DOM", "ES6", "ES7", "ES2017", "DOM.Iterable", "ScriptHost"],
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "noErrorTruncation": false,
    "module": "commonjs"
  }
}
