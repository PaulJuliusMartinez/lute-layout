{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": { "options": [90] },
    "curly": [true, "ignore-same-line"],
    "semicolon": ["never"],
    "indent": [true, "spaces", 2],
    "interface-name": { "options": ["never-prefix"] },
    "no-console": { "severity": "warning" },
    "object-literal-sort-keys": [false],
    "member-access": [true, "no-public"],
    "prefer-const": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-namespace": false,
    "member-ordering": false,
    "interface-over-type-literal": false,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "never",
          "imports": "always",
          "exports": "always"
        },
        "esSpecCompliant": true
      }
  },
  "jsRules": {
    "max-line-length": {
      "options": [100]
    },
    "curly": ["ignore-same-line"],
    "semicolon": ["never"],
    "indent": [true, "spaces", 2]
  }
}
