/* Reset styles */
html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  margin 0

body
  --sidebar-width 300px
  --bottombar-height 200px

#app-container
  width 100vw
  height 100vh

.flex-layout-tool
  display grid
  grid-template-rows auto 16px var(--bottombar-height)
  grid-template-columns auto 16px var(--sidebar-width)
  grid-template-areas "layout v-divider style" \
                      "h-divider v-divider style" \
                      "tree v-divider style"
  height 100%

.flex-layout
  overflow auto
  width calc(100vw - 16px - var(--sidebar-width))
  grid-area layout

.flex-layout-divider
  background-color black

  &.vertical
    cursor: ew-resize;
    grid-area v-divider

  &.horizontal
    cursor: ns-resize;
    grid-area h-divider

.flex-layout-tool-sidebar
  padding 8px
  grid-area style

.tree-modifier
  display flex

/* For displaying focused elements */

FOCUS_WIDTH = 4px

.focus-path, .focused-element
  position relative

  &::after
    content ""
    position absolute
    top 0 - FOCUS_WIDTH
    right 0 - FOCUS_WIDTH
    bottom 0 - FOCUS_WIDTH
    left 0 - FOCUS_WIDTH
    border-width FOCUS_WIDTH
    border-style dashed
    border-color rgba(0, 0, 0, 0.5)

.focused-element::after
  border-color rgb(0, 0, 256)
